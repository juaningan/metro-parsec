{
  "builders": [
    {
      "boot_command": [
        "<down><down><enter>",
        "<wait10><wait5>",
        "root<enter>",
        "tribblix<enter>",
        "ifconfig e1000g0 plumb<enter>",
        "ifconfig e1000g0 auto-dhcp primary<enter>",
        "echo 'nameserver 8.8.8.8' > /etc/resolv.conf<enter>",
        "sed -i 's/PermitRootLogin\\ no/PermitRootLogin\\ yes/g' /etc/ssh/sshd_config<enter>",
        "svcadm restart ssh<enter>"
      ],
      "boot_wait": "5s",
      "disk_size": "{{user `disk_size`}}",
      "guest_additions_mode": "disable",
      "guest_os_type": "Solaris11_64",
      "headless": "{{ user `headless` }}",
      "iso_checksum": "081e8fa775a48c6fec1f0a062d14ae36",
      "iso_checksum_type": "md5",
      "iso_url": "http://pkgs.tribblix.org/iso/tribblix-0m18.iso",
      "shutdown_command": "init 5",
      "shutdown_timeout": "10m",
      "ssh_password": "tribblix",
      "ssh_port": 22,
      "ssh_username": "root",
      "ssh_wait_timeout": "10000s",
      "type": "virtualbox-iso",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "{{ user `memory` }}"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "{{ user `cpus` }}"
        ]
      ],
      "virtualbox_version_file": ".vbox_version",
      "vm_name": "{{ user `template` }}"
    }
  ],
  "provisioners": [
    {
      "scripts": [
        "./mvi.sh"
      ],
      "type": "shell"
    },
    {
      "destination": "mvi.iso",
      "direction": "download",
      "source": "/tmp/mvi.iso",
      "type": "file"
    }
  ],
  "post-processors": [
    [
      {
        "type": "artifice",
        "files": ["mvi.iso"]
      }
    ]
  ],
  "variables": {
    "cpus": "1",
    "disk_size": "10360",
    "headless": "",
    "memory": "2048",
    "template": "mvi-tribblix-m18"
  }
}
