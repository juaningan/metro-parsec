{
  "builders":
  [
    {
      "type": "qemu",
      "iso_url": "http://16.0.96.20/repo/mkosi-f27-x86_64.qcow2",
      "iso_checksum": "650d8ffffc087e5e9a842b7f2b66b53dc0aeff98f4275e5920e5d0eb30497575",
      "iso_checksum_type": "sha256",
      "iso_skip_cache": false,
      "disk_image": "true",
      "disk_size": "42950",
      "format": "{{ user `format` }}",
      "shutdown_command": "sudo poweroff",
      "skip_compaction": true,
      "ssh_username": "packer",
      "ssh_password": "packer",
      "headless": true
    }
  ],
  "provisioners": [
    {
      "destination": "/tmp/workdir",
      "source": "{{ user `workdir` }}",
      "type": "file"
    },
    {
      "type": "shell",
      "environment_vars": [
        "all_proxy={{ user `proxy` }}",
        "http_proxy={{ user `proxy` }}",
        "https_proxy={{ user `proxy` }}",
        "no_proxy={{ user `no_proxy` }}"
      ],
      "scripts": [
        "scripts/mkosi-wrapper.sh"
      ],
      "execute_command": "{{.Vars}} sudo -S -E bash '{{.Path}}'"
    },
    {
      "destination": "output-qemu",
      "direction": "download",
      "source": "/tmp/output/",
      "type":"file" 
    }
  ],
  "post-processors": [
    {
       "type": "shell-local",
       "inline": [
         "rm -rf output-qemu/packer-qemu"
       ]
    },
    {
      "type": "artifice",
      "files": [ "output-qemu/*"]
    }
  ],
  "variables": {
    "proxy": "{{ env `all_proxy` }}",
    "no_proxy": "{{ env `no_proxy` }}",
    "format": "qcow2",
    "workdir": "{{ env `WORKDIR` }}"
  }
}
